{
  "dependencies": {
    "@nestjs/mapped-types": "*"
  },
  "version": "0.0.1",
  "name": "root",
  "private": true,
  "scripts": {
    "dev:fe": "pnpm -F @questionnaire/fe dev",
    "dev:be": "pnpm -F @questionnaire/be start:dev",
    "dev:mock": "pnpm -F @questionnaire/mock dev",
    "generate-tree": "npx treer -e ./structure-tree.txt -i \"/node_modules|.git|dist/\"",
    "prepare": "husky install",
    "version": "npx lerna version --conventional-commits --no-git-tag-version --force-publish=*",
    "postversion": "git add . && git commit -m 'chore: bump versions' && git tag v`node -p \"require('./lerna.json').version\"` && git push --follow-tags"
  },
  "devDependencies": {
    "@lerna/conventional-commits": "^6.4.1",
    "husky": "^8.0.3",
    "lerna": "^8.1.8"
  }
}
