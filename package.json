{
  "dependencies": {
    "@nestjs/mapped-types": "*"
  },
  "name": "root",
  "private": true,
  "scripts": {
    "dev:fe": "pnpm -F @questionnaire/fe dev",
    "dev:be": "pnpm -F @questionnaire/be start:dev",
    "dev:mock": "pnpm -F @questionnaire/mock dev",
    "generate-tree": "npx treer -e ./doc/structure-tree.txt -i \"/node_modules|.git|dist/\"",
    "prepare": "husky install",
    "version": "npx lerna version --conventional-commits --no-git-tag-version --force-publish=*",
    "postversion": "git add . && git commit -m 'chore: bump versions' && git tag v`node -p \"require('./lerna.json').version\"` && git push && git push origin --tags",
    "lint": "pnpm -F @questionnaire/fe lint && pnpm -F @questionnaire/be lint",
    "format": "pnpm -F @questionnaire/fe format && pnpm -F @questionnaire/be format",
    "stat": "cloc --include-lang=JavaScript,TypeScript,SCSS --exclude-dir=node_modules,dist,build ."
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@lerna/conventional-commits": "^6.4.1",
    "husky": "^8.0.3",
    "lerna": "^8.1.8"
  }
}